<!DOCTYPE html>
  <%- include('../_header') %>
  <body>
    <div class="container">
      <% if (user != null) { %>
        <div class="position-relative">
          <div class="position-absolute top-0 start-0">
            <h6>Logged in: <strong><%= user %></strong></h6>
          </div>
          <div class="position-relative top-0 end-0">
            <form action="/logout?_method=DELETE" method="POST">
              <button class="btn btn-info btn-sm" type="submit">Log Out</button>
            </form>
          </div>
        </div>
      <%} %>
      
      <h1 class="mb-4">Articles</h1>
     
      <% if (user == null) { %>
      <a href="/login" class="btn btn-info">Login</a>
      <a href="/register" class="btn btn-info">Register</a>
      <%} else { %>
       <a href="/articles/new" class="btn btn-info">New Article</a>
      
      <%} %> 
      <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-info">Read More</a>

          <% if (user_id != null &&Â user_id == article.user_id) { %>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <button class="btn btn-danger" value="<%= article.id %>" id="delete">Delete article</button>
          <!-- use FORM because of DELETE method, otherwise google bot when go througt the site will click on delete!!!! 
          <form action="/articles/<%= // article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form> -->
           <% } %>

        </div>
      </div>
      <% }) %>
    </div>
     <script src="/sc_delete.js" defer></script>
  </body>
</html>
